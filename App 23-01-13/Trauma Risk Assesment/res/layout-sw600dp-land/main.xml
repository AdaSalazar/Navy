<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#228999"
    android:gravity="left"
    android:orientation="vertical" >

     <ImageView
         android:id="@+id/idivLogo"
         android:layout_width="296dp"
         android:layout_height="352dp"
         android:layout_centerVertical="true"
         android:layout_marginLeft="80dp"
         android:contentDescription="@string/ivlogotext"
         android:src="@drawable/logo_royal_navy" />
     
      <Button
         android:id="@+id/idbTRM"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       	 android:layout_marginLeft="450dp" 
       	 android:layout_marginTop="80dp" 
         android:textSize="35sp"
         android:text="@string/btrm"/>
     <Button
        android:id="@+id/idbBH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idbTRM"
        android:layout_alignRight="@+id/idbTRM"
        android:layout_below="@+id/idbTRM"
        android:layout_marginTop="40dp" 
        android:textSize="35sp"        
        android:text="@string/bbh"/>

    <Button
        android:id="@+id/idbTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idbBH"
        android:layout_alignRight="@+id/idbBH"
        android:layout_below="@+id/idbBH"
        android:layout_marginTop="40dp"
        android:textSize="35sp"
        android:text="@string/btr"/>
    
    <Button
        android:id="@+id/idbCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idbTR"
        android:layout_alignRight="@+id/idbTR"
        android:layout_below="@+id/idbTR"
        android:layout_marginTop="40dp"
        android:textSize="35sp"
        android:text="@string/bch" />

</RelativeLayout>
