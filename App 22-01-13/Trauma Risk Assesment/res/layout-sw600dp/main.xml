<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#228999"
    android:gravity="center_horizontal" >
    <ImageView
        android:id="@+id/idivLogo"
        android:layout_width="296dp"
        android:layout_height="352dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/ivlogotext"
        android:gravity="center"
        android:src="@drawable/logo_royal_navy" />
    
    <Button
         android:id="@+id/idbTRM"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_gravity="center"
         android:layout_below="@+id/idivLogo"
         android:layout_marginTop="60dp"
         android:textSize="35sp"
         android:text="@string/btrm" />
     <Button
        android:id="@+id/idbBH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idbTRM"
        android:layout_alignRight="@+id/idbTRM"
        android:layout_below="@+id/idbTRM"
        android:layout_marginTop="35dp"
        android:textSize="35sp"
        android:text="@string/bbh" />

    <Button
        android:id="@+id/idbTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idbBH"
        android:layout_alignRight="@+id/idbBH"
        android:layout_below="@+id/idbBH"
        android:layout_marginTop="35dp"
        android:textSize="35sp"
        android:text="@string/btr" />
    
</RelativeLayout>
