<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#660099"
    android:gravity="left"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/idivLogo"
        android:layout_width="148dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:contentDescription="@string/ivlogotext"
        android:src="@drawable/logo_royal_navy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/idbTRM"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/trimb" />

        <Button
            android:id="@+id/idbTR"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/traumaresilienceb" />

        <Button
            android:id="@+id/idbBH"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bodyhandlingb" />

        <Button
            android:id="@+id/idbCH"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/cominghomeb" />
    </LinearLayout>

</LinearLayout>